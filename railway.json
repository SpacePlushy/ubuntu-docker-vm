{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "environmentVariables": {
      "PUID": "1000",
      "PGID": "1000",
      "TZ": "America/New_York",
      "CUSTOM_USER": "ubuntu", 
      "PASSWORD": "changeme",
      "TITLE": "Ubuntu Desktop"
    }
  }
}